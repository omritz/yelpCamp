<% include ../partials/header %>
<div class="container">
    <header class="jumbotron">
        <div class="container">
            <h1 >Welcome to YelpCamp</h1>
            <p>View our hand-picked campgrounds from all over the world </p>
            <p>
                <a class="btn btn-primary btn-lg" href="/campgrounds/new"> Add new Campground</a>
            </p>
        </div>
    
    </header>
    
    <div class="row text-center">
            <% campgrounds.forEach(function(camp){ %>
                <div class="col-lg-3 col-sm-6 mb-4">
                    <div class="card">
                        <img class="card-img-top" src="<%=camp.image %>" alt="<%=camp.name %>">
                        <div class="card-body">
                            <h4 class="card-title"> <%=camp.name %></h4>
                        </div>
                        <p><a href="campgrounds/<%=camp._id %>" class="btn btn-primary">More Info</a></p>
                    </div>  
                </div>
            <% }) %>
    </div>

</div>
<% include ../partials/footer %>